<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="InduccionMVVM.Views.ProductTemplate"
             xmlns:control="clr-namespace:InduccionMVVM.Controls"> <!--enlace a la clase genÃ©rica; va a listar los elementos-->
    <ContentView.Content>
        <StackLayout Spacing="0" Padding="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>
                <Image Source="{Binding PathImg}" Grid.Column="0" WidthRequest="60" HeightRequest="60"/>
                
                <StackLayout Grid.Column="1" Spacing="0" Padding="0,5" Orientation="Vertical">
                    <Label Text="{Binding Name}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" 
                           VerticalTextAlignment="Start" HorizontalTextAlignment="Start"/>
                    <Label Text="Precio: $ XXX" FontSize="Large" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" 
                           VerticalTextAlignment="Start" HorizontalTextAlignment="Start"/>
                </StackLayout>
            </Grid>
            
        </StackLayout>
    </ContentView.Content>
</ContentView>
